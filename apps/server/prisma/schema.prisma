// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String?
  profile_image String?
  password      String
  roles         Roles[]
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("users")
}

enum RoleName {
  ADMIN
  RESTAURANT
  DELIVERYMAN
  COSTUMER
}

model Roles {
  id         String   @id @default(uuid())
  name       RoleName @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  users      User[]

  @@map("roles")
}

model Categories {
  id          String   @id @default(uuid())
  name        String   @unique
  alias       String   @unique
  description String?
  thumbnail   String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("categories")
}
